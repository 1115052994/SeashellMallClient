<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- 对话框样式 -->
    <style name="showDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dialog_bottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/sharelib_dialog_bottom_enter</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/sharelib_dialog_bottom_exit</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>