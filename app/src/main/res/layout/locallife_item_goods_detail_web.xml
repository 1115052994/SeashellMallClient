<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="doClick"
            type="android.view.View.OnClickListener" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sharemall_purchase_instructions"
            android:textSize="14sp"
            android:textColor="#2B2B2B"
            android:layout_marginTop="17dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期"
            android:textSize="12sp"
            android:textColor="#393939"
            android:layout_marginTop="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="营业时间：周一至周日"
            android:textColor="#B3B3B3"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#393939"
            android:text="使用时间"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            android:text="10:00-12:30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#393939"
            android:textSize="12sp"
            android:text="使用规则："/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            android:text="10:00-12:30"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ECECEC"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/bt_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sharemall_selector_web_tab_bg"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:gravity="center"
                android:onClick="@{doClick}"
                android:paddingVertical="10dp"
                android:text="@string/sharemall_good_detail2"
                android:textColor="#2B2B2B"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>

            <CheckBox
                android:visibility="gone"
                android:id="@+id/bt_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sharemall_selector_web_tab_bg"
                android:button="@null"
                android:gravity="center"
                android:onClick="@{doClick}"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="@string/sharemall_purchase_instructions"
                android:textColor="@drawable/sharemall_selector_web_tab"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_line"
            app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</layout>
