<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.store.StoreSearchActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_F8"
            android:orientation="vertical">

        <include layout="@layout/sharemall_status_bar" />

        <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/sharemall_gradient_1d1e1f_3e4042"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="doClick"
                    android:padding="15dp"
                    android:src="@mipmap/sharemall_ic_back" />

            <EditText
                    android:id="@+id/et_keyword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/sharemall_radius_15dp_ff"
                    android:gravity="center_vertical"
                    android:hint="@string/sharemall_store_search"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:onClick="doClick"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textColor="@color/black_1d1e1f"
                    android:textSize="12sp" />

            <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/sharemall_ic_category"
                    android:drawablePadding="3dp"
                    android:onClick="doClick"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="3dp"
                    android:text="@string/sharemall_category"
                    android:textColor="#fff6f6f7"
                    android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/rl_fragment_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
</layout>