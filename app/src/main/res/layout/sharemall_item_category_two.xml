<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.liemi.seashellmallclient.data.entity.category.GoodsTwoCateEntity" />

        <variable
            name="position"
            type="Integer" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="18dp"
        android:paddingVertical="11dp">

        <ImageView
            ivPathN="@{item.img_url}"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/baselib_bg_default_pic" />

        <TextView
            android:id="@+id/tv_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{item.name}"
            android:textColor="@color/gray_55"
            android:textSize="12sp"
            android:transitionName="@string/transition_title_name"
            tools:text="羽绒服服服…" />
    </LinearLayout>
</layout>