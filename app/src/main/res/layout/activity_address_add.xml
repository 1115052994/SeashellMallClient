<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.mine.address.AddressAddActivity">
    <data>

        <variable
                name="item"
                type="com.liemi.seashellmallclient.data.entity.AddressEntity"/>

    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_F7"
            android:orientation="vertical">

        <include
                android:id="@+id/layout_title"
                layout="@layout/sharemall_include_title_bar"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_address_add_consignee"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/layout_title">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharemall_address_add_consignee"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_address_add_consignee"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_address_add_consignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_toRightOf="@id/tv_address_add_consignee"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:hint="@string/sharemall_address_add_input_consignee"
                    android:lines="1"
                    android:maxLength="15"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:text="@{item.name}"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"/>
            <View
                    android:id="@+id/view_line_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_address_add_consignee"

            />
        </RelativeLayout>


        <!--手机号-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_address_add_phone"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/rl_address_add_consignee">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharemall_address_add_phone_number"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_address_add_phone"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_address_add_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_address_add_phone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:background="@color/white"
                    android:digits="0123456789-"
                    android:ellipsize="end"
                    android:hint="@string/sharemall_address_add_input_phone"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:text="@{item.tel}"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"/>
            <View
                    android:id="@+id/view_line_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_address_add_phone"/>
        </RelativeLayout>


        <!--省市区-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_belong_area"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/rl_address_add_phone">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharemall_address_area"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_address_area"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:id="@+id/tv_belong_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:background="@color/white"
                    android:drawablePadding="6dp"
                    android:hint="@string/sharemall_please_select_area"
                    android:maxLength="20"
                    android:onClick="doClick"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/tv_address_area"
                    android:layout_centerVertical="true"/>
            <View
                    android:id="@+id/view_line_area"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/tv_belong_area"/>
        </RelativeLayout>

        <!--详细信息-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_detail_address"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/rl_belong_area">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharemall_address_add_detail"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_detail_address"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:background="@color/white"
                    android:gravity="start"
                    android:hint="@string/sharemall_please_input_address"
                    android:lines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:text="@{item.address}"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_detail_address"/>
            <View
                    android:id="@+id/view_line_details_address"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_detail_address"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_set_default_address"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/rl_detail_address">
            <TextView
                    android:id="@+id/tv_set_default_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:text="@string/sharemall_address_add_set_default"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp"/>
            <com.liemi.seashellmallclient.widget.SwitchStateButton
                    android:id="@+id/sb_set_default_address"
                    android:layout_width="35dp"
                    android:layout_height="21dp"
                    android:layout_alignParentRight="true"
                    app:layout_constraintTop_toTopOf="@id/tv_set_default_address"
                    app:select_bg_color="@color/bgColor"
                    app:select_indicate_color="@color/white"
                    app:select_state="false"
                    android:layout_centerVertical="true"
                    app:un_select_bg_color="#E5E5E5"
                    app:unselect_indicate_color="@color/white"/>
        </RelativeLayout>

        <Button
                android:id="@+id/bt_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgColor"
                android:onClick="doClick"
                android:text="@string/sharemall_delete_address"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"/>


    </android.support.constraint.ConstraintLayout>
</layout>