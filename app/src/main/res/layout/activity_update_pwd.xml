<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.login.UpdatePwdActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_F7">
        <include layout="@layout/sharemall_include_title_bar"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_old_pwd"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原密码"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_old_pwd"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_old_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_toRightOf="@id/tv_old_pwd"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:hint="请输入原密码"
                    android:lines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"
            />
            <View
                    android:id="@+id/view_line_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_old_pwd"

            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_new_pwd"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_new_pwd"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_toRightOf="@id/tv_new_pwd"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:hint="请输入新密码"
                    android:lines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_new_pwd"

            />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/rl_new_pwd1"
                android:paddingHorizontal="15dp"
                android:paddingTop="15dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:textSize="14sp"
                    android:textColor="@color/gray_33"
                    android:id="@+id/tv_new_pwd1"
                    android:layout_centerVertical="true"/>
            <EditText
                    android:id="@+id/et_new_pwd1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_toRightOf="@id/tv_new_pwd1"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:hint="请再次输入新密码"
                    android:lines="1"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_33"
                    android:textColorHint="@color/gray_99"
                    android:textSize="14sp"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_EE"
                    android:layout_below="@id/et_new_pwd1"

            />
        </RelativeLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/basemall_radius_10dp_gradient_ef574c"
                android:paddingVertical="10dp"
                android:text="@string/sharemall_save"
                android:gravity="center"
                android:onClick="doClick"
                android:id="@+id/tv_save"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"/>
    </LinearLayout>
</layout>