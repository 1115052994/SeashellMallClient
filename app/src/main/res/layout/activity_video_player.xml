<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.video.VideoPlayerActivity">
    <RelativeLayout
            android:id="@+id/rl_content"
            android:onClick="doClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_F2"
            android:orientation="vertical">

        <SurfaceView
                android:id="@+id/sv_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_play_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@mipmap/alivc_little_video_play"
                android:background="@drawable/aliyun_little_video_backgroud_circle_shape"
                android:visibility="gone"/>
        <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_back"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:onClick="doClick"
                android:src="@mipmap/baselib_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="44dp"/>


    </RelativeLayout>
</layout>