<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.login.PayPwdActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_F7">
        <include layout="@layout/sharemall_include_title_bar"/>
        <RelativeLayout
                android:id="@+id/rl_update_pay_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:onClick="doClick"
                android:paddingHorizontal="15dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改交易密码"
                    android:paddingVertical="15dp"
                    android:textColor="@color/black_1d1e1f"
                    android:textSize="15sp"
                    android:id="@+id/tv_login_pass"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/sharemall_ic_user_info_more"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_login_pass"
                    android:background="@color/gray_F7"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_forget_pay_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:onClick="doClick"
                android:paddingHorizontal="15dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="忘记交易密码"
                    android:paddingVertical="15dp"
                    android:textColor="@color/black_1d1e1f"
                    android:textSize="15sp"
                    android:id="@+id/tv_pay_pass"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/sharemall_ic_user_info_more"/>
        </RelativeLayout>
    </LinearLayout>
</layout>