<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.mine.userinfo.ChangeNickNameActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_F2"
            android:orientation="vertical">

        <include layout="@layout/sharemall_include_title_bar" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="12dp">

            <EditText
                    android:id="@+id/et_nickname"
                    style="@style/sharemall_textViewLine1"
                    android:background="@color/white"
                    android:hint="@string/sharemall_input_new_nick_name"
                    android:maxLength="20"
                    android:paddingTop="16dp"
                    android:paddingBottom="12dp"
                    android:textColor="#1B252D"
                    android:textColorHint="#B9B9B9"
                    android:textSize="15sp" />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eee" />

        </LinearLayout>


        <!--保存按钮-->
        <TextView
                android:id="@+id/tv_save"
                style="@style/sharemall_textViewLine1Center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/basemall_radius_10dp_gradient_ef574c"
                android:onClick="doClick"
                android:paddingTop="14dp"
                android:paddingBottom="15dp"
                android:text="@string/sharemall_submit"
                android:textColor="@color/white"
                android:textSize="16sp" />
    </LinearLayout>
</layout>