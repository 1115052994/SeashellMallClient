<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="doClick"
            type="android.view.View.OnClickListener" />
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:background="@drawable/sharemall_radius_20dp_solid_ffff"
        android:padding="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="@string/privacy_tips"
            android:textSize="19sp"
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/black_1d1e1f"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:id="@+id/tv_content"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_99"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:id="@+id/web"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/gray_99" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_bottom"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/web"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sharemall_radius_23dp_stroke_1dp_898989"
                android:text="不同意并退出"
                android:textColor="@color/gray_99"
                android:textSize="13sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                android:onClick="@{doClick}"
                android:id="@+id/tv_exit"/>
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/sharemall_radius_24dp_ef574c"
                android:text="同意"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:onClick="@{doClick}"
                android:gravity="center"
                android:id="@+id/tv_agree"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
