<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_mine_order_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_mine_order_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/sharemall_ic_no_address" />

        <TextView
            android:id="@+id/tv_not_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_mine_order_empty"
            android:layout_marginTop="32dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/sharemall_address_not_set"
            android:textColor="@color/gray_99"
            android:textSize="14sp" />


    </RelativeLayout>

</layout>