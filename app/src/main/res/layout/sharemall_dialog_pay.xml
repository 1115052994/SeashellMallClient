<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="375dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sharemall_radius_2dp_ff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:padding="5dp"
                android:src="@mipmap/sharemall_ic_share_cancel"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sharemall_please_pay_pwd"
                android:textColor="#1D1E1F"
                android:id="@+id/tv_title"
                android:textSize="16sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/dialog_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_39"
                android:textSize="44sp"
                tools:text="51.80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dialog_money"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/dialog_money"
                android:layout_toRightOf="@+id/dialog_money"
                android:text="@string/sharemall_cny_unit"
                android:textColor="#ff000000"
                android:textSize="18sp" />
        </RelativeLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_pwd_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/sharemall_stroke_1dp_9a9a9a_solid_ff"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/et_pwd_1"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/pwd_line1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_9A9A9A" />

                <ImageView
                    android:id="@+id/et_pwd_2"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/pwd_line2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_9A9A9A" />

                <ImageView
                    android:id="@+id/et_pwd_3"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/pwd_line3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_9A9A9A" />

                <ImageView
                    android:id="@+id/et_pwd_4"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/pwd_line4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_9A9A9A" />

                <ImageView
                    android:id="@+id/et_pwd_5"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/pwd_line5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_9A9A9A" />

                <ImageView
                    android:id="@+id/et_pwd_6"
                    style="@style/sharemall_EditTextPasswordStyle"
                    android:src="@drawable/sharemall_oval_10dp_1d1e1f"
                    android:visibility="invisible"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_pwd_real"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/color_transparent"
                android:cursorVisible="false"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:maxLines="1"
                android:textColor="@color/color_transparent" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:padding="10dp"
            android:text="@string/sharemall_forget_pay_pwd"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>